int pico_ql_serve(sqlite3 *db) {
  void *exit_status = NULL;
#ifndef PICO_QL_SINGLE_THREADED
  pthread_t sqlite_thread;
  pthread_create(&sqlite_thread, NULL, thread_sqlite, db);
#ifdef PICO_QL_JOIN_THREADS
